<div class="employee_index">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>

  <p class="new_employee"><%= link_to '新規追加', new_notice_path, class: 'btn' %></p>

  <table class="employee_table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th><%= sort_order "updated_at", "更新日" %></th>
      </tr>
    </thead>
    <tbody>
    <% @notices.each do |notice| %>
      <tr class="employee">
        <th><%= notice.title %></th>
        <th><%= notice.updated_at %></th>
        <% if current_user.news_posting_auth %>
          <th class="btn_th"><%= link_to '編集', edit_notice_path(notice), class: 'btn' %></th>
          <th class="btn_th"><%= link_to '削除', notice, method: :delete, data: { confirm: "お知らせ「#{notice.title}」を削除します。よろしいですか？" }, class: 'btn' %></th>
          <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
